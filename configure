#!/usr/bin/env ruby

$current_dir = File.dirname(File.expand_path(__FILE__))
Dir[File.join($current_dir, "setup/*.rb")].each do |file|
  require_relative(file)
end
puts "ARGV:#{ARGV}"
pod_name = ARGV.shift
config = Pod::TemplateConfigurator.new(pod_name, "com.tencent.test")
config.add_pod_to_podfile("SDWebImage', '~> 3.0")
config.run
